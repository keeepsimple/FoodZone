@model IEnumerable<Table>
@{
    ViewBag.Title = "Quản lý Bàn";
}
<div class="d-flex flex-row">
    <h1 class="h3 mb-2 text-gray-800">Danh sách bàn</h1>
    <a class="btn btn-primary btn-icon-split btn-sm ml-auto h-100  btn-success" href="@Url.Action("Create", "TableAdmin")">
        <span class="text">Tạo mới</span>
    </a>
    <a class="btn btn-primary btn-icon-split btn-sm ml-auto h-100  btn-success" href="@Url.Action("AutoCreateTable", "TableAdmin")">
        <span class="text">Tạo bàn tự động</span>
    </a>
</div>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Số bàn</th>
                        <th>Tầng</th>
                        <th>Số lượng khách</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NumberTable</td>
                            <td>@item.Floor</td>
                            <td>@item.Capacity</td>
                            <td>@(item.Status == 0 ? "Trống" : "Đã đặt")</td>
                            <td>
                                <form action="@Url.Action("Delete", "TableAdmin", new { id = item.Id })" method="post">
                                    <a class="btn btn-primary btn-icon-split btn-sm" href="@Url.Action("Edit", "TableAdmin", new { id = item.Id })">
                                        <span class="text">Sửa</span>
                                    </a>
                                    <button type="submit" onclick="return confirm('Bạn có muốn xóa @item.NumberTable này?')" class="btn btn-primary btn-icon-split btn-sm"><span class="text">Xoá</span></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>