@model PagedList.PagedList<Table>
@{
    ViewBag.Title = "Quản lý Bàn";
}

<div class="row">
    <div class="col-md-6">
        <a href="@Url.Action("Create", "TableAdmin")" class="btn btn-primary float-left"><span class="fas fa-plus-square"></span></a>
    </div>
</div>

@if (!Model.Any())
{
    <h3 class="text-center">Không tìm thấy bàn nào.</h3>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr class="d-flex center-title">
            <th class="col-md-2">
                Số bàn
            </th>
            <th class="col-md-2">
                Tầng
            </th>
            <th class="col-md-2">
                Chỗ ngồi
            </th>
            <th class="col-md-2">
                Trạng thái
            </th>
            <th class="col-md-4">Quản Lý</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="d-flex center-title">
                <td class="col-md-2">
                    <a href="@Url.Action("Edit", new { id = item.Id })">
                        @item.NumberTable
                    </a>
                </td>
                <td class="col-md-2">
                    @item.Floor
                </td>
                <td class="col-md-2">
                    @item.Capacity
                </td>
                <td class="col-md-2">
                    @(item.Status == 0 ? "Trống" : "Đã đặt")
                </td>
                <td class="col-md-4">
                    <form action="@Url.Action("Delete", "TableAdmin", new { id = item.Id })" method="post">
                        <a href="@Url.Action("Edit", "TableAdmin", new { id = item.Id })" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <button type="submit" onclick="return confirm('Bạn có muốn xóa Bàn @item.NumberTable này?');" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <div class="row">
        <div class="col-sm-12 col-custom">
            <div class="toolbar-bottom">
                <div class="pagination">
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disable" : "";
                        var nextDisabled = !Model.HasNextPage ? "disable" : "";
                        ViewBag.PageRange = 3;
                    }
                    <ul>
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            if (i >= Model.PageNumber - ViewBag.PageRange && i <= Model.PageNumber + ViewBag.PageRange)
                            {
                                <li>
                                    <a class="@(i == Model.PageNumber ? "current" : "")"
                                       href="@Url.Action("Index", "TableAdmin", new { page = i, currentFilter = ViewData["CurrentFilter"] })">@i</a>
                                </li>
                            }
                        }
                        <li class="page-item">
                            <a href="@Url.Action("Index", "TableAdmin", new { page = (Model.PageNumber + 1 > Model.PageCount ? Model.PageCount : Model.PageNumber + 1), currentFilter = ViewData["CurrentFilter"] })"
                               class="@nextDisabled">&gt;</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "TableAdmin", new { page = (Model.PageCount), currentFilter = ViewData["CurrentFilter"] })"
                               class="@nextDisabled">&gt;&gt;</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
@section scripts{
    <script src="~/Scripts/jquery.signalR-2.4.3.min.js"></script>
    <script src="/signalr/hubs"></script>
    <script type="text/javascript">
        $(function () {
            var hubNotify = $.connection.tableHub;
            hubNotify.client.refreshAllTable = function () {
                refreshTable();
            };
            $.connection.hub.start().done(function () {
                refreshTable();
            });

        });
        function refreshTable() {
            $.ajax({
                url: '/Table/GetAll',
                contentType: 'application/html ; charset:utf-8',
                type: 'GET',
                dataType: 'html',
                success: function (result) {
                    console.log('11111111111111111111111111111111111111111111111')
                    document.getElementById("col-signal").append(result);
                }
            });
        }
    </script>
}