@model IEnumerable<News>
@{
    ViewBag.Title = "Quản lý Tin Tức";
}

<div class="d-flex flex-row">
    <h1 class="h3 mb-2 text-gray-800">Danh sách tin tức</h1>
    <a class="btn btn-primary btn-icon-split btn-sm ml-auto h-100  btn-success" href="@Url.Action("Create", "NewsAdmin")">
        <span class="text">Tạo mới</span>
    </a>
</div>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tiêu đề</th>
                        <th>Ngày tạo</th>
                        <th>Ngày sửa</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.InsertedAt.ToString("dd-MM-yyyy HH:mm:ss")</td>
                            <td>@item.UpdatedAt.ToString("dd-MM-yyyy HH:mm:ss")</td>
                            <td>
                                <form action="@Url.Action("Delete", "NewsAdmin", new { id = item.Id })" method="post">
                                    <a class="btn btn-primary btn-icon-split btn-sm" href="@Url.Action("Edit", "NewsAdmin", new { id = item.Id })">
                                        <span class="text">Sửa</span>
                                    </a>
                                    <button type="submit" onclick="return confirm('Bạn có muốn xóa @item.Title này?')" class="btn btn-primary btn-icon-split btn-sm"><span class="text">Xoá</span></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>