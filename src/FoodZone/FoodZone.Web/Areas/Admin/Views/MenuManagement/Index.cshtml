@model IEnumerable<Menu>
@{
    ViewData["Title"] = "Menu Management";
}
<div class="row">
    <div class="col-md-6">
        <a asp-area="Admin" asp-action="Create" class="btn btn-primary float-left"><span class="fas fa-plus-square"></span></a>
    </div>
</div>

@if (!Model.Any())
{
    <h3 class="text-center">Không tìm thấy danh mục nào.</h3>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr class="d-flex center-title">
            <th class="col-md-4 center">
                Tên
            </th>
            <th class="col-md-4 center">
                Mô Tả
            </th>
            <th class="col-md-4 center">Quản Lý</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="d-flex center-title">
                <td class="col-md-4 center">
                    @item.Name
                </td>
                <td class="col-md-4 center">
                    @item.Description
                </td>
                <td class="col-md-4 center">
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <button type="submit" onclick="return confirm('Bạn có muốn xoá @item.Name không?')" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                    </form>
                </td>
            </tr>
        }
    </table>
}