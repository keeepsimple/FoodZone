@model ReservationViewModel
@{
    ViewBag.Title = "Sửa Đơn Đặt Bàn";
}

<h2>Sửa Đơn Đặt Bàn</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="form-horizontal row">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-md-6">
            Ten khach hang
            <p class="form-control">@Model.Name</p>
        </div>

        <div class="form-group col-md-6">
            So dien thoai
            <p class="form-control">@Model.PhoneNumber</p>
        </div>

        <div class="form-group col-md-6">
            Ngay dat
            <p class="form-control">@Model.ReservationDate</p>
        </div>

        <div class="form-group col-md-6">
            Nguoi lon
            <p class="form-control">@Model.Adult</p>
        </div>

        <div class="form-group col-md-6">
            Tre em
            <p class="form-control">@Model.Child</p>
        </div>

        <div class="form-group col-md-6">
            Tong gia
            <p class="form-control">@Model.TotalPrice.ToString("N0")</p>
        </div>

        <div class="form-group col-md-12">
            @Html.Action("GetReservationDetails", "ReservationAdmin", new { reservationId = Model.Id })
        </div>

        <div class="form-group col-md-6">
            Li do huy
            @Html.TextAreaFor(model => model.CancelReason, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.TotalPrice, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            Trạng Thái: @(Model.Status == 0 ? "Mới" : Model.Status == 1 ? "Xác nhận" : Model.Status == 2 ? "Khách đã đến" : Model.Status == 3 ? "Hoàn thành" : "Huỷ đặt bàn" )
        </div>

        <div class="form-group form-button mt-4 col-md-12">
            @if (Model.Status == 0)
            {
                <input type="submit" name="signup" id="signup" class="btn btn-success" value="Xác nhận" />
            }
            else if (Model.Status == 1)
            {
                <input type="submit" name="signup" id="signup" class="btn btn-success" value="Khách đã đến" />
            }
            else if (Model.Status == 2)
            {
                <input type="submit" name="signup" id="signup" class="btn btn-success" value="Hoàn thành" />
            }

            @Html.ActionLink("Trở Về", "Index", null, new { @class = "btn btn-light ml-2" })
        </div>
    </div>
}