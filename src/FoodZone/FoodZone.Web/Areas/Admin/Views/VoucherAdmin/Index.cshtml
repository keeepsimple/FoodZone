@model IEnumerable<Voucher>
@{
    ViewBag.Title = "Quản lý Ưu Đãi";
}
<div class="d-flex flex-row">
    <h1 class="h3 mb-2 text-gray-800">Danh sách ưu đãi</h1>
    <a class="btn btn-primary btn-icon-split btn-sm ml-auto h-100  btn-success" href="@Url.Action("Create", "VoucherAdmin")">
        <span class="text">Tạo mới</span>
    </a>
</div>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tiêu đề</th>
                        <th>Mã</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Code</td>
                            <td>@(item.Status == 1 ? "Còn hiệu lực" : "Hết hiệu lực")</td>
                            <td>
                                <form action="@Url.Action("Delete", "VoucherAdmin", new { id = item.Id })" method="post">
                                    <a class="btn btn-primary btn-icon-split btn-sm" href="@Url.Action("Edit", "VoucherAdmin", new { id = item.Id })">
                                        <span class="text">Sửa</span>
                                    </a>
                                    <button type="submit" onclick="return confirm('Bạn có muốn xóa @item.Title này?')" class="btn btn-primary btn-icon-split btn-sm"><span class="text">Xoá</span></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
