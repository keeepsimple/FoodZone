@model IEnumerable<Menu>
@{
    ViewBag.Title = "Quản lý Menu";
}

<div class="row">
    <div class="col-md-6">
        <a href="@Url.Action("Create", "MenuAdmin")" class="btn btn-primary float-left"><span class="fas fa-plus-square"></span></a>
    </div>
</div>

@if (!Model.Any())
{
    <h3 class="text-center">Không tìm thấy menu nào.</h3>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr class="d-flex center-title">
            <th class="col-md-4">
                Tên
            </th>
            <th class="col-md-4">
                Mô Tả
            </th>
            <th class="col-md-4">Quản Lý</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="d-flex center-title">
                <td class="col-md-4">
                    <a href="@Url.Action("Edit", new { id = item.Id })">
                        @item.Name
                    </a>
                </td>
                <td class="col-md-4">
                    @item.Description
                </td>
                <td class="col-md-4">
                    <form action="@Url.Action("Delete", "MenuAdmin", new { id = item.Id })" method="post">
                        <a href="@Url.Action("Edit", "MenuAdmin", new { id = item.Id })" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <button type="submit" onclick="return confirm('Bạn có muốn xóa Danh Mục @item.Name này?');" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
