@model FoodViewModel

@{
    ViewBag.Title = "Sửa Thức Ăn";
}

<h2>Sửa Thức Ăn</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
<div class="form-horizontal row">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group col-md-6">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên Đồ Ăn" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group col-md-6">
        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @placeholder = "Giá" } })
        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
    </div>

    <div class="form-group col-md-6">
        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mô Tả" } })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>

    <div class="form-group form-button mt-4 col-md-12">
        <input type="submit" name="signup" id="signup" class="btn btn-success" value="Sửa" />
        @Html.ActionLink("Trở Về", "Index", null, new { @class = "btn btn-light ml-2" })
    </div>
</div>
}

@section scripts{
    <script src="~/Assets/js/customize.js"></script>
}