@model IEnumerable<News>


<div class="blog-post-area mt-text-3">
    <div class="container custom-area">
        <div class="row">
            <!--Section Title Start-->
            <div class="col-12">
                <div class="section-title text-center mb-30">
                    <span class="section-title-1">Tin tức</span>
                    <h3 class="section-title-3">Tin tức mới nhất</h3>
                </div>
            </div>
            <!--Section Title End-->
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-4 col-lg-4 col-custom mb-30">
                    <div class="blog-lst">
                        <div class="single-blog">
                            <div class="blog-image">
                                <a class="d-block" href="@Url.Action("Details", "News", new {newsId = item.Id})">
                                    <img src="~/assets/images/@item.Image" alt="Blog Image" class="w-100">
                                </a>
                            </div>
                            <div class="blog-content">
                                <div class="blog-text">
                                    <h4><a href="@Url.Action("Details", "News", new {newsId = item.Id})">@item.Title</a></h4>
                                    <div class="blog-post-info">
                                        <span>@item.InsertedAt.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <p>@item.ShortDescription</p>
                                    <a href="@Url.Action("Details", "News", new {newsId = item.Id})" class="readmore">Đọc thêm<i class="fa fa-long-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>