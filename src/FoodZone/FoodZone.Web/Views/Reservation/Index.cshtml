                                    <a class="nav-link text-uppercase" id="floor-tab2" data-toggle="tab" href="#floor-2" role="tab" aria-selected="false">Tầng 2</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-uppercase" id="floor-tab2" data-toggle="tab" href="#floor-2" role="tab" aria-selected="false">Tầng 2</a>
                                </li>



                            </ul>
                            <div class="tab-pane fade show active display-flex-col" id="floor-1" role="tabpanel" aria-labelledby="floor-tab1">


                                <div class="contructor-floor">
                                    <div class="object recepter-style">
