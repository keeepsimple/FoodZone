@model ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu";
}

<div class="login-register-area mt-5">
    <div class="container custom-area">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-custom">
                <div class="login-register-wrapper">
                    <div class="section-content text-center mb-5">
                        <h2 class="title-4 mb-2">Quên mật khẩu</h2>
                        <p class="desc-content">Nhập email để lấy lại mật khẩu</p>
                    </div>
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="single-input-item mb-3">
                            Email &nbsp; <p class="d-inline-block text-danger">*</p>
                            <input type="email" name="Email" placeholder="Email">
                        </div>

                        <div class="single-input-item mb-3" style="text-align:center">
                            <button class="btn flosun-button secondary-btn theme-color rounded-0">Gửi</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
