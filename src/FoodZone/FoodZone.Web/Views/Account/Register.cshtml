@model RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
}

<div class="login-register-area mt-5">
    <div class="container container-default-2 custom-area">
        <div class="row">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-custom">
                    <div class="login-register-wrapper">
                        <div class="section-content text-center mb-5">
                            <h2 class="title-4 mb-2">Tạo tài khoản</h2>
                            <p class="desc-content">Làm ơn đăng ký theo những thông tin phía dưới</p>
                            <p>@Html.ValidationSummary("", new { @class = "text-danger" })</p>
                        </div>
                        <div class="single-input-item mb-3">
                            @Html.TextBoxFor(m => m.Fullname, new { @placeholder = "Tên đầy đủ" })
                        </div>
                        <div class="single-input-item mb-3">
                            @Html.TextBoxFor(m => m.Username, new { @placeholder = "Tên đăng nhập" })
                        </div>
                        <div class="single-input-item mb-3">
                            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })
                        </div>
                        <div class="single-input-item mb-3">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @placeholder = "Số điện thoại" })
                        </div>
                        <div class="single-input-item mb-3">
                            @Html.PasswordFor(m => m.Password, new { @placeholder = "Mật khẩu" })
                        </div>
                        <div class="single-input-item mb-3">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Xác nhận mật khẩu" })
                        </div>
                        <div class="single-input-item mb-3">
                            <input type="submit" class="btn flosun-button secondary-btn theme-color rounded-0" value="Đăng ký">
                        </div>
                    </div>
                    </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
